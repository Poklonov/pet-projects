from random import *

answers = ['Бесспорно', 'Предрешено', 'Никаких сомнений', 'Определённо да', 'Можешь быть уверен в этом',
'Мне кажется - да', 'Вероятнее всего', 'Хорошие перспективы', 'Знаки говорят - да', 'Да',
'Пока неясно, попробуй снова', 'Спроси позже', 'Лучше не рассказывать', 'Сейчас нельзя предсказать', 'Сконцентрируйся и спроси опять',
'Даже не думай', 'Мой ответ - нет', 'По моим данным - нет', 'Перспективы не очень хорошие', 'Весьма сомнительно']

print('Привет, я магический шар, и я знаю ответ на любой твой вопрос.')
name = input('Назови свое имя: ')
print(f'Приветствую тебя, о {name}!')
again = 'д'
while again.lower() == 'д':
    print('Ты можешь задать свой вопрос:')
    _ = input()
    print(f'На это я могу ответить: {choice(answers)}...')
    again = input(f'Есть ли у тебя еще вопросы, о {name}? (д = да, н = нет): ')

print(f'Возвращайся если возникнут вопросы, уважаемый {name}!')
